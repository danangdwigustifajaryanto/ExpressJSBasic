<html lang="id" class="bg-white dark:bg-zinc-900">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Buku</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white dark:bg-zinc-900 text-zinc-900 dark:text-white min-h-screen p-6">
  <div class="max-w-2xl mx-auto bg-white dark:bg-zinc-800 p-6 rounded-xl shadow-md">
    <h2 class="text-xl font-semibold mb-4">Update Buku</h2>
    <form action="/buku/edit/<%= buku._id %>" method="POST" enctype="multipart/form-data" class="space-y-4">
      <div>
        <label class="block mb-1">Judul:</label>
        <input type="text" name="judul" value="<%= buku.judul %>" required class="w-full px-4 py-2 bg-zinc-100 dark:bg-zinc-700 rounded-md">
      </div>
      <div>
        <label class="block mb-1">Pengarang:</label>
        <input type="text" name="pengarang" value="<%= buku.pengarang %>" required class="w-full px-4 py-2 bg-zinc-100 dark:bg-zinc-700 rounded-md">
      </div>
      <div>
        <label class="block mb-1">Penerbit:</label>
        <input type="text" name="penerbit" value="<%= buku.penerbit %>" required class="w-full px-4 py-2 bg-zinc-100 dark:bg-zinc-700 rounded-md">
      </div>
      <div>
        <label class="block mb-1">Stok:</label>
        <input type="number" name="stok" value="<%= buku.stok %>" required class="w-full px-4 py-2 bg-zinc-100 dark:bg-zinc-700 rounded-md">
      </div>
      <div>
        <label class="block mb-1">Ganti Foto:</label>
        <input type="file" name="foto" class="w-full">
        <img src="/image/<%= buku.foto %>" alt="Foto Buku" class="w-24 mt-2">
      </div>
      <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md">Update</button>
    </form>
    <div class="mt-4">
      <a href="/buku/dashboard" class="text-blue-500 hover:underline">Kembali ke Dashboard</a>
    </div>
  </div>
  <button onclick="document.documentElement.classList.toggle('dark')" class="fixed bottom-4 right-4 w-10 h-10 rounded-full bg-zinc-800 text-white flex items-center justify-center shadow-lg">ðŸŒ“</button>
</body>
</html>
